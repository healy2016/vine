{
  "manifest_version": 2,

  "name": "藤蔓评论",
  "description": "Ultimate 3rd party comment system",
  "version": "0.13",
   
   "browser_action": {
      "default_icon": "icons/browser_action_disabled.png",
      "default_popup": "popup.html"
   },

   "background": {
       "scripts": ["background.js"]
   },

   "content_scripts": {
      "matches": ["*"],
      "js": ["jquery.min.js","contentscript.js"]
    },

    "web_accessible_resources": {
        "frame.html"
    }

   "permissions": ["tabs", "activeTab", "http://www.tengmanpinglun.com/*", "<all_urls>"]
}
